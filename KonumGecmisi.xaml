<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CocugumGuvende.KonumGecmisi"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#111111}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Yenile" Clicked="YenileTikla" />
    </ContentPage.ToolbarItems>

    <RefreshView x:Name="Yenileme" IsRefreshing="False" Refreshing="Yenileme_Refreshing">
        <CollectionView x:Name="Liste" SelectionMode="None">
            <CollectionView.EmptyView>
                <Grid Padding="24">
                    <Label Text="Henüz geçmiş konum kaydı yok."
                           HorizontalOptions="Center" VerticalOptions="Center" />
                </Grid>
            </CollectionView.EmptyView>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="12" ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
                        <VerticalStackLayout Spacing="4">
                            <Label Text="{Binding ZamanText}" FontAttributes="Bold" />
                            <Label Text="{Binding KoordinatText}" />
                            <Label Text="{Binding PilText}" />
                        </VerticalStackLayout>

                        <VerticalStackLayout Grid.Column="1" Spacing="8" HorizontalOptions="End" VerticalOptions="Center">
                            <Button Text="Haritada Aç" Clicked="HaritadaAcTikla" />
                            <Button Text="Kopyala" Clicked="KopyalaTikla" />
                        </VerticalStackLayout>

                        <BoxView Grid.ColumnSpan="2" Grid.RowSpan="2"
                                 VerticalOptions="End" HeightRequest="1"
                                 BackgroundColor="{AppThemeBinding Light=#E6E6E6, Dark=#333}" Margin="0,8,0,0"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </RefreshView>
</ContentPage>
