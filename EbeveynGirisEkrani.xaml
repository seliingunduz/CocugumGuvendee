<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CocugumGuvende.EbeveynGirisEkrani"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Ebeveyn Giriş">

    <VerticalStackLayout Padding="24" Spacing="12">
        <Entry x:Name="eposta" Placeholder="E-posta" Keyboard="Email"/>
        <Entry x:Name="sifre"  Placeholder="Şifre" IsPassword="True"/>

        <Button x:Name="BtnGiris" Text="Giriş Yap"/>
        <Button x:Name="BtnKayit" Text="Kayıt Ol"/>
    </VerticalStackLayout>
</ContentPage>
