<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CocugumGuvende.CocukSecSayfasi"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Çocuk Seç">

    <VerticalStackLayout Padding="16" Spacing="12">

 
        <CollectionView x:Name="Liste" SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="*,Auto" Padding="8,10">
                        <Label Text="{Binding Ad}" FontAttributes="Bold" VerticalOptions="Center"/>
                        <HorizontalStackLayout Grid.Column="1" Spacing="8">
                            <Button Text="Seç" Padding="12,6" Clicked="SecTikla" />
                            <Button Text="QR Oluştur" Padding="12,6"
                                    BackgroundColor="#2563EB" TextColor="White"
                                    Clicked="QrTikla"/>
                        </HorizontalStackLayout>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="Kapat" Clicked="KapatTikla" />
    </VerticalStackLayout>
</ContentPage>
